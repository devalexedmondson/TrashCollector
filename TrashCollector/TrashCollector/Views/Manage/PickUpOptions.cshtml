@model TrashCollector.Models.PickUpOptionsViewModel
@{
    ViewBag.Title = "Pick Up Options";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("PickUpOptions", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Change Pick Up Options</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <p>Please type the day that you wish to have your trash picked up. Example 'Monday'.</p>
    <div class="form-group">
        @Html.LabelFor(m => m.PickUpDay, new { @class = "col-md-2 control-label" })
        
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.PickUpDay, new { @class = "form-control" })
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
